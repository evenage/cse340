<h1>Add New Vehicle</h1>
<form action="/inv/add-vehicle" method="POST">
    <label for="classification_id">Classification:</label>
    <%= classificationSelect %>

        <label for="inv_make">Make:</label>
        <input type="text" name="inv_make" value="<%= inv_make || '' %>" required>

        <label for="inv_model">Model:</label>
        <input type="text" name="inv_model" value="<%= inv_model || '' %>" required>

        <label for="inv_price">Price:</label>
        <input type="number" name="inv_price" step="0.01" value="<%= inv_price || '' %>" required>

        <label for="inv_year">Year:</label>
        <input type="number" name="inv_year" pattern="^\d{4}$" value="<%= inv_year || '' %>" required>

        <label for="inv_miles">Miles:</label>
        <input type="number" name="inv_miles" value="<%= inv_miles || '' %>" required>

        <label for="inv_color">Color:</label>
        <input type="text" name="inv_color" value="<%= inv_color || '' %>" required>

        <button type="submit">Add Vehicle</button>
</form>